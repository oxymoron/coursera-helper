{
    "manifest_version": 2,

    "name": "Coursera Helper",
    "description": "Chrome browser extension for Coursera web site.",
    "version": "1.0",

    "permissions": [
        "tabs"
    ],

    "background": {
        "scripts": ["js/background.js"]
    },

    "content_scripts" : [{
        "matches": [
            "*://*.coursera.org/*"
        ],
        "js": [
            "lib/jquery.js",
            "js/contentscript.js"
        ]
    }],

    "page_action": {
        "default_icon": "style/images/coursera.png",
        "default_title": "Coursera Helper",
        "default_popup": "popup.html"
    }
}